<?xml version="1.0" encoding="utf-8" ?>
<TerrainDefs>

	<TerrainDef Name="GravelFloorBase" Abstract="True">
		<affordances>
			<li>Light</li>
			<li>Heavy</li>
		</affordances>
		<layerable>true</layerable>
		<designationCategory>ZEN_Decoration</designationCategory>
		<RenderPrecedence>150</RenderPrecedence>
		<EdgeType>Hard</EdgeType>
		<PathCost>15</PathCost>
		<acceptFilth>false</acceptFilth>
		<avoidWander>true</avoidWander>
		<takeFootprints>false</takeFootprints>
		<holdSnow>true</holdSnow>
		<statBases>
			<WorkToBuild>150</WorkToBuild>
		</statBases>
		<!-- The stone is broken into gravel, so it shouldn't yield usable blocks -->
		<resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
		<Fertility>0</Fertility>
		<AcceptTerrainSourceFilth>false</AcceptTerrainSourceFilth>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
	</TerrainDef>

	<!--========== Low-Level Bases ==========-->

	<TerrainDef Name="RoughBase" ParentName="GravelFloorBase" Abstract="True">
		<description>Rough gravel flooring made for paths.</description>
		<texturePath>Cupro/Terrain/GravelRough</texturePath>
		<statBases>
			<Beauty>1</Beauty>
			<Cleanliness>-1</Cleanliness>
		</statBases>
		<EdgeType>FadeRough</EdgeType>
		<avoidWander>false</avoidWander>
		<RenderPrecedence>221</RenderPrecedence>
		<PathCost>2</PathCost>
		<ScatterType>Rocky</ScatterType>
		<tags>
			<li>Road</li>
		</tags>
	</TerrainDef>	

	<TerrainDef Name="NormalBase" ParentName="GravelFloorBase" Abstract="True">
		<description>Gravel flooring that can be raked into various patterns.</description>
		<texturePath>Cupro/Terrain/GravelNorm</texturePath>
		<statBases>
			<Beauty>2</Beauty>
		</statBases>
		<RenderPrecedence>222</RenderPrecedence>
		<tags>
			<!-- This tag is used to allow the PlaceWorker to distinguish it without 
			needing to check multiple defs every time raked gravel is placed -->
			<li>UnrakedGravel</li>
		</tags>
	</TerrainDef>	

