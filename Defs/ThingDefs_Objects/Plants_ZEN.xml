<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--============================ Wild - Trees ============================-->

	<ThingDef ParentName="TreeBase">
		<defName>ZEN_PlantTreeCherry</defName>
		<thingClass>RimWorld.PlantWithSecondary</thingClass>
		<label>cherry tree</label>
		<description>A vibrant and colorful tree often grown for decoration. Produces cherries in the spring and summer. Can also be chopped down for cherrywood.</description>
		<graphicData>
			<texPath>Cupro/Object/Plant/CherryTree_Normal</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Beauty>10</Beauty>
		</statBases>
		<plant>
			<growDays>20</growDays>
			<leaflessGraphicPath>Cupro/Object/Plant/CherryTree_Leafless</leaflessGraphicPath>
			<harvestWork>1000</harvestWork>
			<harvestedThingDef>ZEN_CherryWood</harvestedThingDef>
			<harvestYield>35</harvestYield>
			<wildCommonalityMaxFraction>0.001</wildCommonalityMaxFraction>
			<wildClusterSizeRange>
				<min>3</min>
				<max>8</max>
			</wildClusterSizeRange>
			<wildBiomes>
				<TropicalRainforest>0.003</TropicalRainforest>
				<TemperateForest>0.01</TemperateForest>
				<AridShrubland>0.003</AridShrubland>
				<BorealForest>0.005</BorealForest>
			</wildBiomes>
		</plant>
	</ThingDef>
	<RimWorld.PlantWithSecondaryDef>
		<defName>ZEN_PlantTreeCherry</defName>
		<growDays>4.4</growDays>
		<parentMinGrowth>0.75</parentMinGrowth>
		<bloomingGraphicPath>Cupro/Object/Plant/CherryTree_Blooming</bloomingGraphicPath>
		<limitedGrowSeasons>
			<li>Spring</li>
			<li>Summer</li>
		</limitedGrowSeasons>
		<harvestedThingDef>ZEN_Cherries</harvestedThingDef>
		<minToHarvest>20</minToHarvest>
		<maxToHarvest>35</maxToHarvest>
	</RimWorld.PlantWithSecondaryDef>

	<ThingDef ParentName="PlantBase">
		<defName>ZEN_DenseGrass</defName>
		<label>dense grass</label>
		<description>Densely-grown grass, for those who like having a lawn. Dense grass takes more effort to plant and requires decent soil.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>1</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Grass</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible>
			<nutrition>0.36</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>0.30</fertilityMin>
			<fertilitySensitivity>0.8</fertilitySensitivity>
			<growDays>2.5</growDays>
			<lifespanFraction>10</lifespanFraction>
			<leaflessGraphicPath>Things/Plant/Grass_Leafless</leaflessGraphicPath>
			<sowWork>350</sowWork>
			<sowMinSkill>4</sowMinSkill>
			<harvestWork>60</harvestWork>
			<maxMeshCount>25</maxMeshCount>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<visualSizeRange>
				<min>0.4</min>
				<max>1</max>
			</visualSizeRange>
			<wildBiomes>
				<TropicalRainforest>1.5</TropicalRainforest>
				<TemperateForest>1</TemperateForest>
				<AridShrubland>0.6</AridShrubland>
				<BorealForest>0.6</BorealForest>
				<Desert>0.2</Desert>
			</wildBiomes>
			<wildCommonalityMaxFraction>2.5</wildCommonalityMaxFraction>
			<wildClusterSizeRange>
				<min>25</min>
				<max>45</max>
			</wildClusterSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
			<topWindExposure>0.4</topWindExposure>
			<reproduces>false</reproduces>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBase">
		<defName>ZEN_TallHedge</defName>
		<label>tall hedge</label>
		<description>A tall shrubbery for lining paths or walkways. Does not prevent movement.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Cupro/Object/Plant/Hedge</texPath>
			<shadowData>
				<volume>(1, 0.75, 1)</volume>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>5</Beauty>
			<Flammability>1</Flammability>
		</statBases>
		<pathCost>130</pathCost>
		<blockWind>true</blockWind>
		<fillPercent>0.3</fillPercent>
		<altitudeLayer>Building</altitudeLayer>
		<selectable>true</selectable>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
		</ingestible>
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<growDays>5</growDays>
			<lifespanFraction>15</lifespanFraction>
			<growMinGlow>0.4</growMinGlow>
			<growOptimalGlow>0.8</growOptimalGlow>
			<fertilityMin>0.65</fertilityMin>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<topWindExposure>0.15</topWindExposure>
			<visualSizeRange>
				<min>0.8</min>
				<max>1.75</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

</Defs>